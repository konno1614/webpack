{
  "name": "theme-assets",
  "version": "1.0.0",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^5.0.2",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "node-sass": "^4.13.1",
    "node-sass-glob-importer": "^5.3.2",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "prettier-standard": "^16.1.0",
    "prettier-stylelint": "^0.4.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm run rmrf; DEV_TOOL=inline-source-map webpack -w --mode development",
    "build": "npm run rmrf; webpack --mode production",
    "rmrf": "rm -rf ../assets",
    "format": "npm run format:js & npm run format:scss",
    "format:js": "prettier-standard js/**/*.js",
    "format:scss": "prettier-stylelint --write scss/**/*.scss",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order",
      "./node_modules/prettier-stylelint/config.js"
    ],
    "rules": {
      "indentation": 2,
      "string-quotes": "single"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run format"
    }
  },
  "dependencies": {
    "animejs": "^3.1.0",
    "bootstrap": "^4.4.1",
    "intersection-observer": "^0.7.0",
    "jquery": "^3.4.1",
    "swiper": "^5.3.1"
  }
}
